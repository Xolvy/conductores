{
  "routes": [
    {
      "route": "/admin*",
      "rewrite": "/admin/index.html"
    },
    {
      "route": "/diagnostico*", 
      "rewrite": "/diagnostico/index.html"
    },
    {
      "route": "/enhanced*",
      "rewrite": "/enhanced/index.html"
    },
    {
      "route": "/auth-test*",
      "rewrite": "/auth-test/index.html"
    },
    {
      "route": "/test-admin-sdk*",
      "rewrite": "/test-admin-sdk/index.html"
    },
    {
      "route": "/test-conductor*",
      "rewrite": "/test-conductor/index.html"
    },
    {
      "route": "/test-main*",
      "rewrite": "/test-main/index.html"
    },
    {
      "route": "/test-simple*",
      "rewrite": "/test-simple/index.html"
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "/_next/*", "/favicon.ico", "/manifest.json"]
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "text/javascript",
    ".css": "text/css",
    ".html": "text/html",
    ".woff2": "font/woff2",
    ".woff": "font/woff",
    ".ttf": "font/ttf"
  },
  "globalHeaders": {
    "X-Frame-Options": "DENY",
    "X-Content-Type-Options": "nosniff",
    "X-XSS-Protection": "1; mode=block",
    "Strict-Transport-Security": "max-age=31536000; includeSubDomains",
    "Referrer-Policy": "strict-origin-when-cross-origin",
    "Cache-Control": "public, max-age=31536000, immutable"
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/404.html",
      "statusCode": 404
    }
  },
  "platform": {
    "apiRuntime": "node:20"
  },
  "trailingSlash": "auto",
  "forwardingGateway": {
    "allowedForwardedHosts": ["app-conductores.azurestaticapps.net"]
  }
}