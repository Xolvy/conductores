// 🚀 CONFIGURACIÓN PACKAGE.JSON FUTURISTA 2026
{
  "name": "app-conductores-2026",
  "version": "2.0.0",
  "description": "Sistema de gestión de conductores con tecnologías futuristas 2026",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "// 🎯 DESARROLLO BÁSICO": "",
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",

    "// 🧪 TESTING AVANZADO": "",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:visual": "playwright test --update-snapshots",

    "// ⛓️ WEB3 DEVELOPMENT": "",
    "blockchain:compile": "hardhat compile",
    "blockchain:test": "hardhat test",
    "blockchain:deploy": "hardhat run scripts/deploy.js",
    "blockchain:verify": "hardhat verify",
    "blockchain:node": "hardhat node",
    "blockchain:clean": "hardhat clean",

    "// ☁️ DEVOPS & DEPLOYMENT": "",
    "docker:build": "docker build -t app-conductores-2026 .",
    "docker:run": "docker run -p 3000:3000 app-conductores-2026",
    "docker:dev": "docker-compose up --build",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "terraform:init": "terraform init",
    "terraform:plan": "terraform plan",
    "terraform:apply": "terraform apply",

    "// 📊 PERFORMANCE & ANALYTICS": "",
    "analyze": "cross-env ANALYZE=true next build",
    "bundle:analyze": "npx @next/bundle-analyzer",
    "perf:lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./reports/lighthouse.html",
    "perf:webvitals": "next-vitals-reporter",

    "// 🎨 DESIGN & STORYBOOK": "",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "storybook:deploy": "chromatic --project-token=YOUR_TOKEN",
    "figma:sync": "figma-import --token=YOUR_TOKEN",

    "// 🔧 MAINTENANCE": "",
    "clean": "rimraf .next out dist coverage .nyc_output",
    "clean:all": "npm run clean && rimraf node_modules package-lock.json",
    "update:deps": "npx npm-check-updates -u",
    "security:audit": "npm audit --audit-level=moderate",
    "prepare": "husky install"
  },
  "dependencies": {
    "// 🎯 CORE FRAMEWORK": "",
    "next": "^14.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",

    "// 🤖 AI & MACHINE LEARNING": "",
    "@anthropic-ai/sdk": "^0.15.0",
    "@openai/api": "^1.0.0",
    "@tensorflow/tfjs": "^4.15.0",
    "@huggingface/inference": "^2.6.4",
    "langchain": "^0.1.25",

    "// ⛓️ WEB3 & BLOCKCHAIN": "",
    "ethers": "^6.10.0",
    "wagmi": "^1.4.13",
    "@rainbow-me/rainbowkit": "^1.3.5",
    "viem": "^1.19.11",
    "@web3modal/ethereum": "^2.7.1",
    "web3": "^4.5.0",

    "// 🔥 FIREBASE OPTIMIZADO": "",
    "firebase": "^10.7.2",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.6.0",

    "// 🎨 UI & STYLING": "",
    "tailwindcss": "^3.4.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "framer-motion": "^11.0.3",
    "lucide-react": "^0.320.0",
    "react-hook-form": "^7.49.3",
    "@headlessui/react": "^1.7.18",

    "// 📊 STATE MANAGEMENT": "",
    "zustand": "^4.5.0",
    "jotai": "^2.6.4",
    "react-query": "^3.39.3",
    "@tanstack/react-query": "^5.17.19",

    "// 🔧 UTILITIES": "",
    "clsx": "^2.1.0",
    "class-variance-authority": "^0.7.0",
    "tailwind-merge": "^2.2.1",
    "date-fns": "^3.3.1",
    "zod": "^3.22.4",
    "react-error-boundary": "^4.0.12"
  },
  "devDependencies": {
    "// 🧪 TESTING MODERNO": "",
    "@playwright/test": "^1.41.1",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.4.1",
    "@testing-library/user-event": "^14.5.2",
    "vitest": "^1.2.2",
    "@vitest/ui": "^1.2.2",
    "@vitest/coverage-v8": "^1.2.2",
    "jsdom": "^24.0.0",

    "// ⛓️ BLOCKCHAIN DEVELOPMENT": "",
    "hardhat": "^2.19.4",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.3",
    "@openzeppelin/contracts": "^5.0.1",
    "@openzeppelin/hardhat-upgrades": "^3.0.5",

    "// ☁️ DEVOPS TOOLS": "",
    "@types/dockerode": "^3.3.23",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.5",
    "concurrently": "^8.2.2",

    "// 📊 PERFORMANCE TOOLS": "",
    "@next/bundle-analyzer": "^14.1.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "lighthouse": "^11.4.0",
    "web-vitals": "^3.5.2",

    "// 🎨 DESIGN TOOLS": "",
    "@storybook/react": "^7.6.10",
    "@storybook/addon-essentials": "^7.6.10",
    "@storybook/addon-interactions": "^7.6.10",
    "chromatic": "^10.2.0",

    "// 🔧 DEVELOPMENT TOOLS": "",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.33",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",

    "// 🚀 EMERGING TECHNOLOGIES": "",
    "@rust-wasm/wasm-bindgen": "^0.2.89",
    "wasm-pack": "^0.12.1",
    "@astrojs/node": "^8.2.0",
    "astro": "^4.2.1",
    "svelte": "^4.2.8",
    "@sveltejs/kit": "^2.5.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check && npm run test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": ["eslint --fix", "prettier --write"],
    "*.{json,md,yml,yaml}": ["prettier --write"],
    "*.sol": ["solhint --fix"]
  },
  "browserslist": {
    "production": [">0.2%", "not dead", "not op_mini all"],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [
    "nextjs",
    "react",
    "typescript",
    "tailwindcss",
    "firebase",
    "web3",
    "blockchain",
    "ai",
    "machine-learning",
    "devops",
    "kubernetes",
    "docker",
    "performance",
    "testing",
    "playwright",
    "vitest",
    "2026",
    "future-ready"
  ],
  "author": "Developer 2026",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/app-conductores-2026.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/app-conductores-2026/issues"
  },
  "homepage": "https://github.com/your-username/app-conductores-2026#readme"
}
