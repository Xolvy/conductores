{
  "name": "Sistema de Gestión de Territorios",
  "short_name": "Territorios App",
  "description": "Sistema integral para la gestión de territorios de predicación y base de datos telefónica",
  "version": "2.0.0",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#10b981",
  "background_color": "#0f172a",
  "categories": ["productivity", "utilities", "business"],
  "lang": "es",
  "dir": "ltr",
  "scope": "/",
  "icons": [
    {
      "src": "/favicon.ico",
      "sizes": "16x16 32x32",
      "type": "image/x-icon"
    },
    {
      "src": "/favicon.ico",
      "sizes": "192x192",
      "type": "image/x-icon",
      "purpose": "any"
    },
    {
      "src": "/favicon.ico",
      "sizes": "512x512",
      "type": "image/x-icon",
      "purpose": "any"
    }
  ],
  "screenshots": [
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Dashboard principal del sistema"
    }
  ],
  "shortcuts": [
    {
      "name": "Conductor",
      "short_name": "Conductor",
      "description": "Acceso rápido al panel de conductor",
      "url": "/?mode=conductor",
      "icons": [
        {
          "src": "/favicon.ico",
          "sizes": "192x192",
          "type": "image/x-icon"
        }
      ]
    },
    {
      "name": "Administrador",
      "short_name": "Admin",
      "description": "Panel de administración",
      "url": "/?mode=admin",
      "icons": [
        {
          "src": "/favicon.ico",
          "sizes": "192x192",
          "type": "image/x-icon"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {},
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls", ".xlsx"]
      }
    }
  ]
}
